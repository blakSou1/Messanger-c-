<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="44" Margin="10,0,0,0" TextWrapping="Wrap" Text="имя юзера" VerticalAlignment="Top" Width="210"/>
        <Button x:Name="bConDis" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Margin="240,10,0,0" VerticalAlignment="Top" Height="32" Width="50"/>
        <ListBox x:Name="lbChat" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,64,35,60"/>
        <TextBox x:Name="tdMessage" HorizontalAlignment="Left" Margin="10,374,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="390" Height="48"/>

    </Grid>
</Window>
